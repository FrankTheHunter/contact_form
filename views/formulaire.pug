doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Formulaire
    style.
      body {
        text-align: center;
        margin: 40px;
        background-color: #3498db; /* Set the background color to blue */
        color: #000; /* Set the text color to black */
        font-family: Arial, sans-serif; /* Specify a font family */
      }

      h1 {
        text-align: center;
      }

      form {
        display: inline-block;
        text-align: left;
        background-color: #fff; /* Set the form background color to white */
        padding: 20px; /* Add some padding to the form */
        border-radius: 8px; /* Add rounded corners to the form */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
      }

      label {
        display: block;
        margin-bottom: 8px;
      }

      input, textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        box-sizing: border-box;
      }

      button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #3498db; /* Set the button background color to blue */
        color: #fff; /* Set the button text color to white */
        border: none; /* Remove the button border */
        cursor: pointer; /* Add a pointer cursor to the button */
        border-radius: 4px; /* Add rounded corners to the button */
      }

  body
    h1 Formulaire
    form(action='/traitement-formulaire', method='post')
      label(for='nom') Nom :
      input(type='text', id='nom', name='nom', required)

      label(for='prenom') Pr√©nom :
      input(type='text', id='prenom', name='prenom', required)

      label(for='email') Adresse E-mail :
      input(type='email', id='email', name='email', required)

      label(for='message') Message :
      textarea(id='message', name='message', required)

      button(type='submit') Envoyer
